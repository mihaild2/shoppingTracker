{
    "manifest_version": 3,
    "name": "Kaufland & Lidl Tracker",
    "version": "1.1",
    "description": "Следене на цени от Kaufland и Lidl.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.kaufland.bg/",
        "https://www.lidl.bg/"
    ],
    "icons": {
        "16": "icons/shopping-16.png",
        "48": "icons/shopping-48.png",
        "128": "icons/shopping-100.png"
    },
    "action": {
        "default_title": "Catalog Tracker"
    },
    "background": {
        "service_worker": "background.js"
    }
}